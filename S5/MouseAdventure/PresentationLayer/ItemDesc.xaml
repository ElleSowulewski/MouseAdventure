<Window x:Class="MouseAdventure.PresentationLayer.ItemDesc"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MouseAdventure.PresentationLayer"
        mc:Ignorable="d"
        Title="ItemDescription" Height="200" Width="400"
        Background="LightBlue">
    <Grid>
        <StackPanel>
            <Label
                x:Name="name"
                Padding="10"
                FontSize="15"
                FontWeight="Bold">
            </Label>
        </StackPanel>
        <StackPanel
            Height="100">
            <Label
                x:Name="text"
                Height="90"
                Background="White"
                Margin="10"
                Padding="10"
                BorderBrush="black"
                BorderThickness="2"
                >
            </Label>
        </StackPanel>
    </Grid>
</Window>
